{
  "$id": "shared.application.schema",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "description": { "type": "string" },
    "icon": { "type": "string", "default": "icon.png" },
    "initialization": { "$ref": "#/$defs/templates" },
    "finalization": { "$ref": "#/$defs/templates" }
  },
  "additionalProperties": false,
  "$defs": {
    "templates": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
