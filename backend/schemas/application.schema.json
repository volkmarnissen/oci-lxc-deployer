{
  "$id": "application",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "extends": { "type": "string", "pattern": "^(local:|[^:]+).*$" },
    "description": { "type": "string" },
    "icon": { "type": "string", "default": "icon.png" },
    "installation": { "$ref": "templatelist.schema.json" },
    "backup": { "$ref": "templatelist.schema.json" },
    "restore": { "$ref": "templatelist.schema.json" },
    "uninstall": { "$ref": "templatelist.schema.json" },
    "update": { "$ref": "templatelist.schema.json" },
    "upgrade": { "$ref": "templatelist.schema.json" }
  },
  "required": ["name", "installation"],
    "additionalProperties": false

}
