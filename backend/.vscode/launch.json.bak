{
  // Verwendet IntelliSense zum Ermitteln möglicher Attribute.
  // Zeigen Sie auf vorhandene Attribute, um die zugehörigen Beschreibungen anzuzeigen.
  // Weitere Informationen finden Sie unter https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "address": "localhost",
      "localRoot": "${workspaceFolder}",
      "name": "LXC manager to Remote",
      "port": 9229,
      "remoteRoot": "${workspaceFolder}",
      "request": "attach",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Launch Web Server",
      "program": "${workspaceFolder}/dist/lxc-manager.mjs",
      "preLaunchTask": "npm: build",
      "request": "launch",
      "sourceMaps": true,
      "cwd": "${workspaceFolder}",
      "args": [
        "--local",
        "${workspaceFolder}/examples",
        "--storageContextFilePath",
        "~/lxc-manager/examples/storagecontext.json",
        "--secretsFilePath",
        "~/lxc-manager/examples/secret.txt"
      ],

      "trace": true,
      "outFiles": [
        "${workspaceFolder}/dist/**/*.mjs",
        "${workspaceFolder}/dist/**/*.mjs.map"
      ],
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Launch Command line",
      "program": "${workspaceFolder}/dist/lxc-exec.mjs",
      "preLaunchTask": "npm: build",
      "args": [
        "sambabackup",
        "installation",
        "local/parameters.json",
        "local/restart-info.json"
      ],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Jsonvalidator",
      "program": "${workspaceFolder}/scripts/validateTemplates.mjs",
      "preLaunchTask": "npm: build",
      "args": [
        "modbus2mqtt",
        "installation",
        "local/parameters.json",
        "local/restart-info.json"
      ],
      "request": "launch",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run jest",
      "runtimeExecutable": "jest",
      "cwd": "${workspaceFolder}",
      "args": []
    },
    {
      "type": "node",
      "name": "vscode-jest-tests.v2.proxmox2",
      "request": "launch",
      "args": [
        "--runInBand",
        "--watchAll=false",
        "--testNamePattern",
        "${jest.testNamePattern}",
        "--runTestsByPath",
        "${jest.testFile}"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "program": "${workspaceFolder}/node_modules/.bin/jest",
      "windows": {
        "program": "${workspaceFolder}/node_modules/jest/bin/jest"
      }
    }
  ]
}
