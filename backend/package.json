    "@types/jsonschema": "^0.0.5",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-vitest": "^0.5.4",
    "fs-extra": "^11.3.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
