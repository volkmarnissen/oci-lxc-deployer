{
  "execute_on": "proxmox",
  "name": "Create LXC Container",
  "description": "Create LXC container on Proxmox host",
  "parameters": [
    {
      "id": "vm_id",
      "name": "ID of the virtual machine",
      "type": "number",
      "default": "",
      "description": "ID of the virtual machine"
    },
    {
      "id": "template_path",
      "name": "Path to the LXC template",
      "type": "string",
      "required": true,
      "description": "Path to the LXC template (e.g. local:vztmpl/alpine-3.19-default_20231107_amd64.tar.xz)"
    },
    {
      "id": "disk_size",
      "name": "Disk size",
      "type": "string",
      "required": true,
      "default": "4",
      "description": "Disk size for the container in GB"
    },
    {
      "id": "memory",
      "name": "Memory in MB", 
      "type": "number",
      "required": true,
      "default": 512,
      "description": "Memory for the container in MB"
    },
    {
      "id": "bridge",
      "name": "Network bridge",
      "type": "string",
      "required": true,
      "default": "vmbr0",
      "description": "Network bridge to use"
    },
    {
      "id": "hostname",
      "name": "Hostname",
      "type": "string",
      "required": true,
      "description": "Hostname for the LXC container"
    }
  ],
  "outputs": ["vm_id"],
  "commands": [
    {
      "script": "create-lxc-container.sh"
    }
  ]
}
