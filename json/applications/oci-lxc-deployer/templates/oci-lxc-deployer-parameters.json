{
  "execute_on": "ve",
  "name": "Set Parameters",
  "description": "Set application-specific parameters for OCI LXC Deployer",
  "parameters": [],
  "commands": [
    {
      "name": "set-properties",
      "properties": [
        {
          "id": "hostname",
          "value": "oci-lxc-deployer"
        },
        {
          "id": "oci_image",
          "value": "ghcr.io/modbus2mqtt/oci-lxc-deployer"
        },
        {
          "id": "uid",
          "value": "0"
        },
        {
          "id": "username",
          "value": "root"
        },
        {
          "id": "volumes",
          "value": "config=/config\nsecure/secure,700"
        },
        {
          "id": "volume_backup",
          "value": "true"
        }
      ]
    }
  ]
}