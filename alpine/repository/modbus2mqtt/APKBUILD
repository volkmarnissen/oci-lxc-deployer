# shellcheck shell=sh
pkgname=modbus2mqtt
pkgver=1.0.0
pkgrel=0
pkgdesc="Modbus2Mqtt command-line tool with OpenRC service"
url=""
arch="noarch"
license="MIT"
depends="openrc"
makedepends=""
install="post-install"
options="!check !strip"
source="
    files/modbus2mqtt.initd
    files/modbus2mqtt.confd
    files/modbus2mqtt
    files/post-install
    "

prepare() {
  :
}

build() {
  :
}

package() {
  install -d "$pkgdir"/usr/bin
  install -m755 "$startdir"/files/modbus2mqtt "$pkgdir"/usr/bin/modbus2mqtt

  install -d "$pkgdir"/etc/init.d
  install -m755 "$startdir"/files/modbus2mqtt.initd "$pkgdir"/etc/init.d/modbus2mqtt

  install -d "$pkgdir"/etc/conf.d
  install -m644 "$startdir"/files/modbus2mqtt.confd "$pkgdir"/etc/conf.d/modbus2mqtt
}

sha512sums="
SKIP  modbus2mqtt.initd
SKIP  modbus2mqtt.confd
SKIP  modbus2mqtt
SKIP  post-install
"
