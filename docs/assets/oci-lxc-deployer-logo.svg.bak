<?xml version="1.0" encoding="UTF-8"?>
<svg xmlns="http://www.w3.org/2000/svg" width="640" height="200" viewBox="0 0 640 200" role="img" aria-label="LXC Manager Logo">
  <defs>
    <linearGradient id="grad1" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#00A3FF;stop-opacity:1"/>
      <stop offset="50%" style="stop-color:#7C4DFF;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#FF4081;stop-opacity:1"/>
    </linearGradient>
    <linearGradient id="grad2" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#00C853;stop-opacity:1"/>
      <stop offset="50%" style="stop-color:#FFC400;stop-opacity:1"/>
      <stop offset="100%" style="stop-color:#FF3D00;stop-opacity:1"/>
    </linearGradient>
    <filter id="softShadow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur in="SourceAlpha" stdDeviation="3"/>
      <feOffset dx="0" dy="2" result="offsetblur"/>
      <feMerge>
        <feMergeNode/>
        <feMergeNode in="SourceGraphic"/>
      </feMerge>
    </filter>
  </defs>

  <!-- Background -->
  <rect x="0" y="0" width="640" height="200" fill="#F7F9FC"/>

  <!-- Curved multi-color lines -->
  <path d="M20,140 C120,60 240,200 340,120 C420,60 520,160 620,90" fill="none" stroke="url(#grad1)" stroke-width="8" stroke-linecap="round"/>
  <path d="M20,160 C120,80 240,180 340,100 C420,40 520,140 620,70" fill="none" stroke="url(#grad2)" stroke-width="8" stroke-linecap="round" opacity="0.9"/>

  <!-- Icon: stylized container box with flowing lines -->
  <g transform="translate(40,40)">
  <rect x="0" y="0" width="80" height="80" rx="12" ry="12" fill="#FFFFFF" stroke="#D0D7E2" stroke-width="2"/>
  <!-- Three more-curved lines converging near top-left, contained within square -->
  <path d="M8 68 C 22 60, 38 46, 52 34 C 64 24, 24 20, 16 18" fill="none" stroke="#4F8EF7" stroke-width="4" stroke-linecap="round"/>
  <path d="M8 76 C 22 66, 38 52, 52 40 C 64 28, 26 24, 18 20" fill="none" stroke="#34C759" stroke-width="4" stroke-linecap="round" opacity="0.95"/>
  <path d="M8 60 C 22 52, 38 38, 52 26 C 64 18, 22 16, 14 14" fill="none" stroke="#FF9F0A" stroke-width="4" stroke-linecap="round" opacity="0.9"/>
  </g>

  <!-- Title -->
  <text x="140" y="90" font-family="Inter,Segoe UI,Roboto,Helvetica,Arial,sans-serif" font-size="40" font-weight="700" fill="#1F2A44">LXC Manager</text>
  <text x="140" y="120" font-family="Inter,Segoe UI,Roboto,Helvetica,Arial,sans-serif" font-size="16" fill="#4A5B78">Provision, configure, and manage LXC apps on Proxmox</text>
</svg>
