{
  "$id": "application",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "extends": { "type": "string", "pattern": "^(local:|[^:]+).*$" },
    "description": { "type": "string" },
    "icon": { "type": "string", "default": "icon.png" },
    "url": { "type": "string" },
    "documentation": { "type": "string" },
    "source": { "type": "string" },
    "vendor": { "type": "string" },
    "installation": { "$ref": "templatelist" },
    "backup": { "$ref": "templatelist" },
    "restore": { "$ref": "templatelist" },
    "uninstall": { "$ref": "templatelist" },
    "update": { "$ref": "templatelist" }
  },
  "required": ["name", "installation"],
  "additionalProperties": false
}
