{
  "$id": "framework",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": { "type": "string" },
    "extends": { "type": "string", "pattern": "^(local:|[^:]+).*$" },
    "icon": { "type": "string", "default": "icon.png" },
    "url": { "type": "string" },
    "documentation": { "type": "string" },
    "source": { "type": "string" },
    "vendor": { "type": "string" },
    "description": { "type": "string" },
    "properties": {
      "type": "array",
      "items": {
        "oneOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "default": { "type": "boolean" }
            },
            "required": ["id", "default"],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "required": ["name", "extends", "properties"],
  "additionalProperties": false
}

